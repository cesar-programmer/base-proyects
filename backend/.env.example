# Configuración del servidor
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:8082

# Configuración de la base de datos MySQL
DB_HOST=mysql
DB_PORT=3306
DB_USER=user
DB_PASSWORD=password
DB_NAME=reportesdb

# Configuración JWT
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui
JWT_EXPIRES_IN=24h

# Configuración de logging
LOG_LEVEL=info

# =============================
# Configuración Recordatorios
# =============================
# Proveedor de envío: notification | smtp
REMINDER_PROVIDER=notification

# SMTP (si REMINDER_PROVIDER=smtp)
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=no-reply@uabc.edu

# Nota: Para usar Brevo via SMTP, establece SMTP_USER y SMTP_PASS
# con tu usuario y clave SMTP mostrados en el panel de Brevo.
