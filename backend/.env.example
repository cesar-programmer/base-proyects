# Entorno y servidor
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:8082

# Base de datos
DB_HOST=localhost
DB_PORT=3306
DB_USER=user
DB_PASSWORD=password
DB_NAME=reportesdb

# JWT
JWT_SECRET=cambia_esto_por_un_secreto_seguro
JWT_EXPIRES_IN=24h

# CORS (opcional, coma-separado)
# CORS_ORIGINS=https://mi-frontend.com,https://otro-dominio.com

# Rate limiting - Valores OPTIMIZADOS PARA DEMOS
# Configuración actual: 10,000 peticiones cada 5 minutos
AUTH_RATE_LIMIT_WINDOW_MS=300000       # 5 minutos
AUTH_RATE_LIMIT_MAX=10000              # 10,000 intentos de login cada 5 min
GENERAL_RATE_LIMIT_WINDOW_MS=300000    # 5 minutos
GENERAL_RATE_LIMIT_MAX=10000           # 10,000 peticiones generales cada 5 min

# Estos valores garantizan que no habrá errores 429 durante demos
# Para ajustar en producción según carga real, reducir MAX si es necesario

